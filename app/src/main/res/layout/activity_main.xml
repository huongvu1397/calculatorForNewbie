<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*"
    tools:context=".MainActivity">

    <TableRow>

        <EditText
            android:id="@+id/editTextHienThi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="4"
            android:editable="false"
            android:gravity="right"
            android:paddingBottom="25dp"
            android:paddingTop="25dp"
            android:text="0"
            android:textSize="20sp" />


    </TableRow>

    <TableRow>

        <Button
            android:layout_margin="2dp"
            android:layout_span="3"
            android:background="@drawable/change_background_function_button" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_margin="2dp"
            android:background="@drawable/change_background_function_button"
            android:text="Delete" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/btn7"
            android:layout_margin="2dp"
            android:background="@drawable/change_background"
            android:padding="25dp"
            android:text="7"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn8"
            android:layout_margin="2dp"
            android:background="@drawable/change_background"
            android:padding="25dp"
            android:text="8"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn9"
            android:layout_margin="2dp"
            android:background="@drawable/change_background"
            android:padding="25dp"
            android:text="9"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnchia"
            android:layout_margin="2dp"
            android:background="@drawable/change_background_function_button"
            android:padding="25dp"
            android:text="/"
            android:textSize="30sp" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/btn4"
            android:layout_margin="2dp"
            android:background="@drawable/change_background"
            android:padding="25dp"
            android:text="4"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn5"
            android:layout_margin="2dp"
            android:background="@drawable/change_background"
            android:padding="25dp"
            android:text="5"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn6"
            android:layout_margin="2dp"
            android:background="@drawable/change_background"
            android:padding="25dp"
            android:text="6"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnnhan"
            android:layout_margin="2dp"
            android:background="@drawable/change_background_function_button"
            android:padding="25dp"
            android:text="*"
            android:textSize="30sp" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/btn1"
            android:layout_margin="2dp"
            android:background="@drawable/change_background"
            android:padding="25dp"
            android:text="1"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn2"
            android:layout_margin="2dp"
            android:background="@drawable/change_background"
            android:padding="25dp"
            android:text="2"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn3"
            android:layout_margin="2dp"
            android:background="@drawable/change_background"
            android:padding="25dp"
            android:text="3"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btntru"
            android:layout_margin="2dp"
            android:background="@drawable/change_background_function_button"
            android:padding="25dp"
            android:text="-"
            android:textSize="30sp" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/btncham"
            android:layout_margin="2dp"
            android:background="@drawable/change_background"
            android:padding="25dp"
            android:text="."
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn0"
            android:layout_margin="2dp"
            android:background="@drawable/change_background"
            android:padding="25dp"
            android:text="0"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnbang"
            android:layout_margin="2dp"
            android:background="@drawable/change_background_function_button"
            android:padding="25dp"
            android:text="="
            android:textSize="30sp" />

        <Button
            android:id="@+id/btncong"
            android:layout_margin="2dp"
            android:background="@drawable/change_background_function_button"
            android:padding="25dp"
            android:text="+"
            android:textSize="30sp" />
    </TableRow>

</TableLayout>